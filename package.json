{
  "name": "egg-crud-generator",
  "version": "1.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "egg-gen": "dist/index.js"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "node scripts/copy-templates.js",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "test:generate": "node scripts/generate-test.js single",
    "test:generate:all": "node scripts/generate-test.js all",
    "prepare": "husky install",
    "release": "release-it"
  },
  "keywords": [
    "egg.js",
    "crud",
    "generator",
    "cli",
    "mongodb",
    "egg-mongoose"
  ],
  "author": "mr.xiaowei",
  "license": "MIT",
  "description": "A CLI tool to automatically generate CRUD files for egg.js projects with MongoDB.",
  "git": "https://github.com/lxw-bfw",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "ejs": "^3.1.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/ejs": "^3.1.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "husky": "^8.0.0",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "release-it": "^19.0.3",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.17.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
